
$bam-blue = #0f163f
$white = #fbfbfb
$gray = #dddddd
$text-on-light = #555555
$font = #333333

html
    height 100%
    font-size 16px
    +below(900px)
        font-size 12px
    +below(450px)
        font-size 8px
    +below(360px)
        font-size 6px

body
    //edit()
    font-family "Open Sans", sans-serif
    padding 0
    margin 0
    height 100%
    background-color $gray

a
    color $font
    text-decoration underline
    &:visited
        color $font
    &:hover
        color $font
        font-weight bold
