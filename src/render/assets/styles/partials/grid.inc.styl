
.grid
    width 70%
    margin 1rem auto 1rem auto

.grid-card
    column(1/3, cycle:3)
    height 10rem
    margin-top 1rem
    margin-bottom 1rem
    box-shadow 1px 1px 9px #666666
    background-color $white
    overflow hidden
    text-overflow ellipsis

    &:hover
        box-shadow 1px 1px 9px #6688CC
        background-color darken($white, 6%)

    a:hover
        font-weight 400

    h1
        text-align left
        font-size 2.5rem
        line-height 3.5rem
        font-weight 400
        margin-left 1rem

    h2
        text-align center
        font-size 1.3rem
        line-height 1.5rem

